<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="faceanalysis.Analysis">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="20">
                <Button Text="TAKE A PHOTO AND ANALYSE!" Clicked="loadCamera" />
                <Image x:Name="image" />
                <Label x:Name="description" />
                <Button x:Name="post" Text="POST RESULT TO SERVER" IsEnabled="False" Clicked="postButton" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>